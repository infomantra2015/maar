    ?>
    <div style="width: 100%;">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="no-sort">
                        <a
                            alt="store_id" href="javascript:void(0)">
                            <?php echo $this->translate('S.No.'); ?> </a>
                    </th>
                    <th class="<?php echo ($columnName == 'store_name') ? "sorting_" . $order : "sorting"; ?>">
