                        <td><?php echo ucfirst($store->status); ?></td>
                        <td><?php echo $store->created_on; ?></td>
                        <td>
                            <a href="javascript:void(0)" class="btn btn-primary btn-xs viewStore" onclick="viewStore(<?php echo $store->store_id; ?>)">
